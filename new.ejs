<% include partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">New Blog</div>
    <form method="POST" action="/blogs" class="ui form">
        <div class="field">
            <label>Title</label>
            <input type="text" placeholder="Title" name="blog[title]">
        </div>
         <div class="field">
            <label>Image</label>
            <input type="text" placeholder="Image URL" name="blog[image]">
        </div>
         <div class="field">
            <label>Post</label>
            <textarea placeholder="Post goes here...." name="blog[body]"></textarea>
        </div>
        <input type="submit" class="ui blue big inverted button">
    </form>
</div>
