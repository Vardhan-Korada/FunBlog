<% include partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form method="POST" action="/blogs/<%= blog._id %>?_method=PUT" class="ui form">
        <div class="field">
            <label>Title</label>
            <input type="text" value="<%= blog.title %>" name="blog[title]">
        </div>
         <div class="field">
            <label>Image</label>
            <input type="text" value="<%= blog.image %>" name="blog[image]">
        </div>
         <div class="field">
            <label>Post</label>
            <textarea  name="blog[body]"><%= blog.body %></textarea>
        </div>
        <input type="submit" class="ui blue big inverted button">
    </form>
</div>
<% include partials/footer %>